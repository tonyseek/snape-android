<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@id/item_message_avatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="12dp" />
    <TextView
        android:id="@id/item_message_person"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_message_avatar"
        android:layout_alignTop="@id/item_message_avatar"
        tools:text="Severus Snape" />
    <TextView
        android:id="@id/item_message_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_message_person"
        android:layout_toRightOf="@id/item_message_avatar"
        android:layout_alignBottom="@id/item_message_avatar"
        android:singleLine="true"
        android:ellipsize="end"
        tools:text="Tom Riddle created his first Horcrux using a ring owned by his maternal grandfather." />
</RelativeLayout>
